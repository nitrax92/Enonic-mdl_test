<part>
    <display-name>Image Card</display-name>
    <config>
        <field-set name="image_carousel">
            <label>Things</label>
            <items>
                <input type="TextLine" name="carousel_title">
                    <label>Title</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="ImageSelector" name="images">
                    <label>Article image</label>
                    <occurrences minimum="1" maximum="5"/>
                    <config></config>
                </input>
            </items>
        </field-set>
    </config>
</part>